<link rel="stylesheet" href="/css/style.css" />
<div class="wrap">
  <form class="login-form" action="/users/create-session" method="post">
    <div class="form-header">
      <h3>Login Form</h3>
      <p>Login to access your dashboard</p>
    </div>
    <!--Email Input-->
    <div class="form-group">
      <input
        type="email"
        name="email"
        placeholder="Email"
        class="form-input"
        required
      />
    </div>
    <!--Password Input-->
    <div class="form-group">
      <input
        type="password"
        name="password"
        class="form-input"
        placeholder="Password"
        required
      />
    </div>
    <div
      class="g-recaptcha form-group"
      data-sitekey="6LdMH8IjAAAAAAasnZ4yuE1jCKMR_4ZlfQxAS70B"
    ></div>
    <!--Login Button-->
    <div class="form-group">
      <button class="form-button" type="submit">Login</button>
    </div>
    <div class="form-footer">
      Don't have an account? <a href="/users/sign-up">Sign Up</a><br /><br />
      <p>
        <a href="/users/auth/google">Google Sign In/Sign Up</a>
      </p>
    </div>
  </form>
</div>
<!--/.wrap-->
